{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "typeRoots": ["types"],
    "outDir": "./dist",
    "target": "es2021",
    "module": "Node16",
    "strict": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "resolveJsonModule": true,
  },
  "exclude": [
    "node_modules",
    "babel.config.js"
  ],
}